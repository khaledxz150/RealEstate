                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="features">
                                    <div class="container">
                                        <h5>Extra Features</h5>
                                        <div class="row" style="margin:10px; justify-content:space-around ">
                                            <p> @Html.CheckBox("Garage", 1)  Garage </p>
                                            <p> @Html.CheckBox("Pool", 1)  Pool </p>
                                            <p> @Html.CheckBox("Backyard", 1)  Backyard </p>
                                            <label>Other? <input type="text" /></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <label>Clear Filters</label><input type="reset" class="btn btn-danger" data-dismiss="modal">
                            <button type="submit" class="btn btn-danger" data-dismiss="modal">Search</button>
                        </div>
                    </div>
                    </div>
            </div>
