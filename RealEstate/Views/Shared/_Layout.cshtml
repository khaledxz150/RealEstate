                                            <label> Min:</label>
                                            <select name="MinBedrooms">
                                                <option value="Any">Any</option>
                                            </select>
                                            <label>Max:</label>
                                            <select name="MaxBedrooms">
                                                <option value="Any">Any</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <hr />

                                <div class="Bathrooms">
